{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Time Tracker",
    "description": "",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8081",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/auth/send-magic-link": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Check user in db",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "Email that we should check",
            "schema": {
              "$ref": "#/definitions/AuthEmail"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User is verified",
            "schema": {
              "$ref": "#/definitions/MagicLinkToken"
            }
          }
        }
      }
    },
    "/auth/verify-magic-link": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Check token",
        "parameters": [
          {
            "name": "token",
            "in": "body",
            "description": "Token that we should check",
            "schema": {
              "$ref": "#/definitions/AuthToken"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Token is verified",
            "schema": {
              "$ref": "#/definitions/UserToken"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "AuthEmail": {
      "type": "object",
      "required": [
        "email"
      ],
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "MagicLinkToken": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "magicLinkToken": {
              "type": "string"
            }
          }
        }
      }
    },
    "AuthToken": {
      "type": "object",
      "required": [
        "email",
        "token"
      ],
      "properties": {
        "token": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "UserToken": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "token": {
              "type": "string"
            },
            "user": {
              "type": "object",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "birthdayDate": {
          "type": "string",
          "format": "date-time"
        },
        "hireDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}